          allow create, read, update, delete;
        }
        match /rooms/{roomId} {
          match /callerCandidates/{callerCandidatesId} {function cascaded(){return null}}
          match /calleeCandidates/{calleeCandidatesId} {function cascaded(){return null}}      
        }
      }
		}

		match /stage/{stageId} {
